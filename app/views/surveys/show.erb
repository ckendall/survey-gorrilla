<div class='container'>

  <% if session[:user_id] != @user.id %>
    <nav class="nav-bar">
      <h2 class='username'><%=@user.username%> </h2>
      <h1 class='survey-name'><%=@survey.survey_name%></h1>
      <h3 class='question-name'><%=@question.question_name%></h3>
    </nav>
    <form action="taker submission" method="POST">
    <label for ="answer">Answer: </label><br>
    <input type="radio" name="answer" value="True"> True
    <input type="radio" name="answer" value="False"> False<br><br>
    <input type="submit" value="Submit">
    </form>
  <% else %>
    <nav class="nav-bar">
      <h2 class='username'><%=@user.username%> </h2>
      <h1 class='survey-name'><%=@survey.survey_name%></h1>
      <h3 class='question-name'><%= @question.question_name%></h3>
      <p class='choice-name'><%=@choice.choice_name%></p>
  </nav>
  <% end %>

</div>
