<div class="container login registration">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Join Survey Gorilla!</h1>
      <p class="text-center">Please fill in the following information.</p>
      <form class="login-form center_div" action="/users/new" method="post">
        <p class="errors">
          <% if params[:errors] != nil %>
            Something went wrong here ... <%=params[:errors] %>
          <% end %>
        </p>
        <div class="form-group login-stuff text-center">
          <label for="username">Username:</label>
          <input class="form-control" type="text" name="username" placeholder="jonnyD">
        </div>
        <div class="form-group">
         <label for="password">Password:</label>
         <input class="form-control" type="password" name="password" placeholder="Password">
       </div>
       <div class="form-group">
         <label for="email">Verify Password:</label>
         <input class="form-control" type="password" name="verify_password" placeholder="Verify Password">
       </div>
       <input type="submit" class="btn btn-default login-button center-block" value="Register">
     </form>
   </div>
 </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p class="text-center">Already have an account? Login <a class="register" href="/">here</a>.</p>
    </div>
  </div>
</div>
