<script src='js/application.js' type='text/javascript'></script>
<div class="container login">
  <div class="row">
    <div class="col-sm-12">
      </div>
      <img class ="img-responsive center-block home-logo" src='imgs/survey_gorilla.png'>
      <h1 class="text-center">Welcome to Survey Gorilla!</h1>
      <p class="text-center">Please log in here.</p>
      <form class="login-form center_div" action="/login" method="post">
      <fieldset>
        <div class="form-group login-stuff text-center">
          <label for="username">Username:</label>
          <input class="form-control" type="text" id="username" name="username" placeholder="Username">
          
          <label for="password">Password:</label>
          <input class="form-control" type="password" id="pwd" name="password" placeholder="Password">
          
          <input id = "showPwd" type="checkbox" value='showPwd'>
          <label for='showPwd'>show password</label>
          
          <input type="submit" class="btn btn-default login-button center-block" value="Login">
      </fieldset>
     </form>
   </div>
 </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p class="text-center">If you're not a registered user, please register <a class="register" href="/users/new">here</a>.</p>
    </div>
  </div>
</div>

